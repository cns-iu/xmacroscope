{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "downlevelIteration": true,
    "importHelpers": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "dom",
      "es2018",
      "esnext"
    ],
    "paths": {
      "@angular": [
        "node_modules/@angular/"
      ],
      "@angular/*": [
        "node_modules/@angular/*"
      ],
      "rxjs": [
        "node_modules/rxjs"
      ],
      "rxjs/*": [
        "node_modules/rxjs/*"
      ],
      "stream": [ 
        "node_modules/readable-stream"
      ],
      "xmacroscope-dvl-fw-plugin": [
        "dist/xmacroscope-dvl-fw-plugin"
      ],
      "xmacroscope-dvl-fw-plugin/*": [
        "dist/xmacroscope-dvl-fw-plugin/*"
      ]
    }
  },
  "exclude": [
    "../../node_modules/**/*"
  ],
}