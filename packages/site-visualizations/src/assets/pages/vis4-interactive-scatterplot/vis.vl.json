{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "repeat": {
    "row": ["height", "Time (seconds)", "zipcode"],
    "column": ["zipcode", "Time (seconds)", "height"]
  },
  "transform": [{"filter": "datum.height < 200"}],
  "spec": {
    "data": {
      "url": "assets/generated/combined-data.csv",
      "format": {
        "type": "csv",
        "parse": {"Time (seconds)": "number"}
      }
    },
    "mark": {"type": "point", "tooltip": {"content": "data"}},
    "params": [
      {
        "name": "brush",
        "select": {
          "type": "interval",
          "resolve": "union",
          "on": "[mousedown[event.shiftKey], window:mouseup] > window:mousemove!",
          "translate": "[mousedown[event.shiftKey], window:mouseup] > window:mousemove!",
          "zoom": "wheel![event.shiftKey]"
        }
      },
      {
        "name": "grid",
        "select": {
          "type": "interval",
          "resolve": "global",
          "translate": "[mousedown[!event.shiftKey], window:mouseup] > window:mousemove!",
          "zoom": "wheel![!event.shiftKey]"
        },
        "bind": "scales"
      }
    ],
    "encoding": {
      "x": {"field": {"repeat": "column"}, "type": "quantitative"},
      "y": {
        "field": {"repeat": "row"},
        "type": "quantitative",
        "axis": {"minExtent": 30}
      },
      "color": {
        "condition": {"param": "brush", "field": "EVENT", "type": "nominal"},
        "value": "grey"
      }
    }
  }
}